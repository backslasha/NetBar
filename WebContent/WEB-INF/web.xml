<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>NetBar</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <listener>
  <listener-class>com.listener.FinishListener</listener-class>
  </listener>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>*.ajax</url-pattern>
    <url-pattern>*.do</url-pattern>
    <url-pattern>/member.jsp</url-pattern>
    <url-pattern>/manager.jsp</url-pattern>
    <url-pattern>/boss.jsp</url-pattern>
  </filter-mapping>
  <session-config>
    <session-timeout>1440</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>ControllerServlet</servlet-name>
    <servlet-class>com.servlet.ControllerServlet</servlet-class>
    <init-param>
      <param-name>login</param-name>
      <param-value>com.action.LoginAction</param-value>
    </init-param>
    <init-param>
      <param-name>logout</param-name>
      <param-value>com.action.LogoutAction</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControllerServlet</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AjaxServlet</servlet-name>
    <servlet-class>com.servlet.AjaxServlet</servlet-class>
    <init-param>
      <param-name>uses</param-name>
      <param-value>com.ajax.ComputerUsesAJAX</param-value>
    </init-param>
    <init-param>
      <param-name>managerMessage</param-name>
      <param-value>com.ajax.ManagerMessageAJAX</param-value>
    </init-param>
    <init-param>
      <param-name>computerStatus</param-name>
      <param-value>com.ajax.ComputerStatusAJAX</param-value>
    </init-param>
    <init-param>
      <param-name>members</param-name>
      <param-value>com.ajax.MembersAJAX</param-value>
    </init-param>
    <init-param>
      <param-name>consumptions</param-name>
      <param-value>com.ajax.ConsumptionsAJAX</param-value>
    </init-param>
    <init-param>
      <param-name>managers</param-name>
      <param-value>com.ajax.ManagersAJAX</param-value>
    </init-param>
    <init-param>
      <param-name>brokenRecords</param-name>
      <param-value>com.ajax.BrokenRecordsAJAX</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>AjaxServlet</servlet-name>
    <url-pattern>*.ajax</url-pattern>
  </servlet-mapping>
</web-app>